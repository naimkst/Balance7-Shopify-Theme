<!-- product-area -->
<div class="b-section product-area section-padding">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-7">
        <div class="section-title text-center">
          <h2>{{ section.settings.section_title }}</h2>
          <p>{{ section.settings.section_description }}</p>
          <a href="{{ section.settings.button_link}}">{{ section.settings.button_text }}</a>
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Landing Product About",
    "settings": [
      {
        "type": "text",
        "id": "section_title",
        "label": "Title",
        "default": "Introducing the Balance7 Collection of Alkalizing Supplements"
      }, {
        "type": "text",
        "id": "section_description",
        "label": "Section Description",
        "default": "Ever felt that your body is just not on your side? That despite your best efforts, something seems off? You are not alone."
      }, {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Read More"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }
    ],

    "presets": [
      {
        "name": "Landing Product About"
      }
    ]
  }
{% endschema %}