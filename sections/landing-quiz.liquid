<!-- quiz-area -->
<div class="b-section quiz-area section-padding" style="background: url({{ section.settings.section_image |  image_url: width: 1920  }}) no-repeat center top; background-size: cover;">
  <div class="container-bt">
    <div class="quiz-wrap">
      <div class="quiz-text wow fadeInUp" data-wow-duration="1000ms">
        <span>{{ section.settings.section_slug }}</span>
        <h2>{{ section.settings.section_title }}</h2>
        <p>{{ section.settings.section_description }}</p>
        <a href="{{ section.settings.button_link }}" class="theme-btn">{{ section.settings.button_text }}</a>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Landing Quiz Section",
    "settings": [
      {
        "type": "text",
        "id": "section_slug",
        "label": "Section Slug",
        "default": "Quiz Timeâ„¢"
      },
      {
        "type": "text",
        "id": "section_title",
        "label": "Section Title",
        "default": "Will Balance7 work for me?"
      },
      {
        "type": "text",
        "id": "section_description",
        "label": "Section Description",
        "default": "Answer a few questions to see if Balance7 is a good fit for you!"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Take the Quiz Now"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }, {
        "type": "image_picker",
        "id": "section_image",
        "label": "Section Image"
      }
    ],

    "presets": [
      {
        "name": "Landing Quiz Section"
      }
    ]
  }
{% endschema %}