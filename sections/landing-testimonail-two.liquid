<!-- testimonial-area -->
<div class="b-section testimonial-area style-2 section-padding">
  <div class="container">
    <div class="row">
      <div class="col-lg-6">
        <div class="section-title">
          <h2>{{ section.settings.section_title }}</h2>
        </div>
      </div>
    </div>
    <div class="testimonial-active owl-carousel">
      {% for block in section.blocks %}
        <div class="testimonial-wrap">
          <div class="testimonial-img">
            <div class="testimonial-text">
              <h2>{{ block.settings.testimonial_text }}</h2>
              <p>{{ block.settings.testimonail_description }}</p>
              <div class="video">
                <ul>
                  <li>
                    <a
                      href="{{ block.settings.video_link }}"
                      data-type="iframe"
                      class="open-video"><img
                        src="{{ 'video2.svg' |  asset_url }}"
                        width=""
                        height=""
                        alt=""></a>
                  </li>
                  <li>{{ block.settings.video_slug }}</li>
                </ul>
              </div>
            </div>
            <img
              class="t-bg"
              src="{{ block.settings.video_thumbnail |  image_url: width: 1920 }}"
              width=""
              height=""
              alt="">
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Landing Testimonial Two",
    "settings": [
      {
        "type": "text",
        "id": "section_title",
        "label": "Section Title",
        "default": "Hear the Success Stories"
      }
    ],
    "blocks": [
      {
        "name": "Add Testimonial",
        "type": "block",
        "settings": [
          {
            "type": "image_picker",
            "id": "video_thumbnail",
            "label": "Video Thumbnail Image"
          },
          {
            "type": "url",
            "id": "video_link",
            "label": "Video Link"
          },
          {
            "type": "text",
            "id": "video_slug",
            "label": "Vieo Slug",
            "default": "Watch: Lisa Kruitbosch"
          },
          {
            "type": "text",
            "id": "testimonial_text",
            "label": "Testimonial Text",
            "default": "View More Testimonials"
          }, {
            "type": "text",
            "id": "testimonail_description",
            "label": "Testimonail Description",
            "default": "With the help of Balance7â„¢, Denise is here today. She is NOT a paid actor."
          }
        ]
      }
    ],

    "presets": [
      {
        "name": "Landing Testimonial Two",
        "blocks": [
          {
            "type": "block"
          }
        ]
      }
    ]
  }
{% endschema %}